# =============================================================================
# VEHICLE RENTAL BACKEND - ENVIRONMENT CONFIGURATION
# =============================================================================

# Basic Application Configuration
PORT=7000
NODE_ENV=development
LOG_LEVEL=warn

# Database Configuration (Neon PostgreSQL)
DATABASE_URL=postgresql://neondb_owner:your_password@your-neon-endpoint.neon.tech/neondb?sslmode=require&channel_binding=require

# Redis Configuration (Upstash Redis)
REDIS_URL=rediss://default:your_redis_password@your-redis-endpoint.upstash.io:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-signature
JWT_EXPIRES_IN=365d
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=365d
JWT_RESET_SECRET=your-password-reset-secret
ACCESS_TOKEN_SECRET=your-super-secret-access-token-key-minimum-32-characters-long

# Email Configuration
EMAIL_SENDER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
FRONTEND_URL=http://localhost:3000

# =============================================================================
# STRIPE PAYMENT CONFIGURATION
# =============================================================================
STRIPE_SECRET_KEY=sk_test_51xxxxx...  # Your Stripe Secret Key
STRIPE_PUBLISHABLE_KEY=pk_test_51xxxxx...  # Your Stripe Publishable Key
STRIPE_WEBHOOK_SECRET=whsec_xxxxx...  # Webhook signing secret from Stripe Dashboard
STRIPE_SUCCESS_URL=http://localhost:3000/booking/success
STRIPE_CANCEL_URL=http://localhost:3000/booking/cancel

# =============================================================================
# M-PESA PAYMENT CONFIGURATION (SAFARICOM)
# =============================================================================
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_PASSKEY=your_mpesa_passkey
MPESA_BUSINESS_SHORT_CODE=174379  # Your business shortcode
MPESA_ENVIRONMENT=sandbox  # 'sandbox' or 'production'
MPESA_CALLBACK_URL=https://postman-echo.com/post

# =============================================================================
# RATE LIMITING CONFIGURATION (200x ENHANCED!)
# =============================================================================
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=10000000

# Presentation Mode: Effectively disable rate limiting for smooth demos (ALWAYS ON)
DISABLE_RATE_LIMITING=true

# M-Pesa specific rate limiting (more generous for payment status checks)
MPESA_RATE_LIMIT_WINDOW_MS=60000
MPESA_RATE_LIMIT_MAX_REQUESTS=30

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:7000,http://127.0.0.1:5500,http://localhost:5500,http://localhost:5173,http://127.0.0.1:5173,http://localhost:4173,http://localhost:8080

# =============================================================================
# API DOCUMENTATION
# =============================================================================
ENABLE_API_DOCS=true

# =============================================================================
# CLOUDINARY CONFIGURATION
# =============================================================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
